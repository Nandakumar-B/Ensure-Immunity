<resources>
    <!-- Base application theme. -->
    <style name="Theme.VaccineReminder" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:navigationBarColor">#ffffff</item>
        <item name="android:colorPrimaryDark">#000080</item>
        <item name="android:textColorPrimary">#5C5C1E</item>
        <item name="android:textColorSecondary">#000080</item>
    </style>
    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:navigationBarColor">#000080</item>
        <item name="android:colorPrimaryDark">#000080</item>
        <item name="android:textColorPrimary">#384308</item>
        <item name="android:textColorSecondary">#000000</item>
    </style>
    <style name="EditTheme">
        <item name="android:padding">15dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/input_selector</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000080</item>
        <item name="android:letterSpacing">0.1</item>
    </style>
    <style name="zoomAlert">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>
</resources>